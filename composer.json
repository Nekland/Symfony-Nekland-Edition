{
    "name":        "nekland/symfony-nekland-edition",
    "license":     "MIT",
    "type":        "project",
    "description": "The \"Symfony Nekland Edition\" distribution",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php":                                  ">=5.4.0",
        "symfony/symfony":                      "~2.7",
        "doctrine/orm":                         "~2.5",
        "doctrine/doctrine-bundle":             "~1.4",
        "twig/extensions":                      "~1.0",
        "symfony/assetic-bundle":               "~2.3",
        "symfony/swiftmailer-bundle":           "~2.3",
        "symfony/monolog-bundle":               "~2.4",
        "sensio/distribution-bundle":           "~4.0",
        "sensio/framework-extra-bundle":        "~3.0",
        "incenteev/composer-parameter-handler": "~2.0",
        "nekland/nekland-edition-bundle":       "~1.0",
        "nekland/dependency-tools":             "dev-master"
    },
    "require-dev": {
        "sensio/generator-bundle":           "~2.3",
        "behat/behat":                       "~3.0",
        "behat/mink-extension":              "~2.0",
        "behat/mink-browserkit-driver":      "*",
        "behat/mink-selenium2-driver":       "*",
        "behat/mink-goutte-driver":          "1.1.*@dev",
        "phpspec/phpspec":                   "~2.0",
        "knplabs/friendly-contexts":         "dev-master",
        "doctrine/doctrine-fixtures-bundle": "2.2.*"
    },
    "scripts": {
        "post-install-cmd": [
            "Yohang\\DependencyTools::installDeps",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Yohang\\DependencyTools::updateDeps",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::removeSymfonyStandardFiles",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "dependency-tools": {
            "npm":   true,
            "bower": {
                "path": "node_modules/.bin/bower"
            }
        }
    }
}
